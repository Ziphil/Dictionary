<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ziphil.custom.AdditionMode?>
<?import ziphil.custom.UnfocusableButton?>


<fx:root type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <spacing><Double rpx="5"/></spacing>
  <ListView fx:id="$listView" orientation="horizontal">
    <prefHeight><Double rpx="38"/></prefHeight>
    <minHeight><Double rpx="38"/></minHeight>
  </ListView>
  <HBox>
    <spacing><Double rpx="5"/></spacing>
    <TextField fx:id="$inputControl" HBox.hgrow="always"/>
    <ComboBox fx:id="$additionModeControl">
      <prefWidth><Double rpx="140"/></prefWidth>
      <minWidth><Double rpx="140"/></minWidth>
      <items>
        <FXCollections fx:factory="observableArrayList">
          <AdditionMode fx:value="NORMAL"/>
          <AdditionMode fx:value="SPLIT_SINGLE"/>
          <AdditionMode fx:value="SPLIT_COMMA"/>
        </FXCollections>
      </items>
      <value><AdditionMode fx:value="SPLIT_COMMA"/></value>
    </ComboBox>
    <Button text="追加" onAction="#addInput">
      <prefWidth><Double rpx="70"/></prefWidth>
      <minWidth><Double rpx="70"/></minWidth>
    </Button>
  </HBox>
  <HBox>
    <Button text="選択削除" onAction="#remove">
      <prefWidth><Double rpx="70"/></prefWidth>
      <minWidth><Double rpx="70"/></minWidth>
    </Button>
    <HBox HBox.hgrow="always"/>
    <HBox>
      <spacing><Double rpx="5"/></spacing>
      <UnfocusableButton text="←" onAction="#exchangeLeft"/>
      <UnfocusableButton text="→" onAction="#exchangeRight"/>
    </HBox>
  </HBox>
</fx:root>