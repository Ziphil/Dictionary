<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import ziphil.custom.FileChooser?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@../css/main.css"/>
  </stylesheets>
  <center>
    <VBox>
      <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
      <FileChooser fx:id="$chooser" VBox.vgrow="always"/>
    </VBox>
  </center>
  <bottom>
    <AnchorPane>
      <HBox spacing="5" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
        <Button text="キャンセル" onAction="#cancelChoose" cancelButton="true" minWidth="80" prefWidth="80"/>
        <Button text="OK" onAction="#commitChoose" defaultButton="true" minWidth="80" prefWidth="80"/>
      </HBox>
    </AnchorPane>
  </bottom>
</BorderPane>

