<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@../css/main.css"/>
    <URL value="@../css/modification.css"/>
  </stylesheets>
  <center>
    <VBox spacing="5">
      <padding><Insets top="10" bottom="10" left="10" right="10"/></padding>
      <TableView fx:id="$table">
        <columns>
          <TableColumn text="名前" prefWidth="150">
            <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
          </TableColumn>
          <TableColumn text="単語数" prefWidth="90">
            <cellValueFactory><PropertyValueFactory property="wordSize"/></cellValueFactory>
          </TableColumn>
          <TableColumn text="サイズ" sortable="false" prefWidth="90">
            <cellValueFactory><PropertyValueFactory property="fileSize"/></cellValueFactory>
          </TableColumn>
          <TableColumn text="ファイル名" sortable="false" prefWidth="250">
            <cellValueFactory><PropertyValueFactory property="path"/></cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
    </VBox>
  </center>
  <bottom>
    <AnchorPane>
      <Button text="辞書の追加" onAction="#loadNewDictionary" minWidth="90" prefWidth="90" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"/>
      <HBox spacing="5" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
        <Button text="キャンセル" onAction="#cancelShow" cancelButton="true" minWidth="90" prefWidth="90"/>
        <Button text="表示" onAction="#commitShow" defaultButton="true" minWidth="90" prefWidth="90"/>
      </HBox>
    </AnchorPane>
  </bottom>
</BorderPane>

