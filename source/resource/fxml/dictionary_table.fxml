<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@../css/main.css"/>
    <URL value="@../css/modification.css"/>
  </stylesheets>
  <center>
    <VBox>
      <spacing><Double rpx="5"/></spacing>
      <padding>
        <Insets>
          <top><Double rpx="10"/></top>
          <right><Double rpx="10"/></right>
          <bottom><Double rpx="10"/></bottom>
          <left><Double rpx="10"/></left>
        </Insets>
      </padding>
      <TableView fx:id="$table">
        <columns>
          <TableColumn text="名前">
            <prefWidth><Double rpx="150"/></prefWidth>
            <cellValueFactory><PropertyValueFactory property="name"/></cellValueFactory>
          </TableColumn>
          <TableColumn text="単語数">
            <prefWidth><Double rpx="70"/></prefWidth>
            <cellValueFactory><PropertyValueFactory property="wordSize"/></cellValueFactory>
          </TableColumn>
          <TableColumn text="サイズ" sortable="false">
            <prefWidth><Double rpx="70"/></prefWidth>
            <cellValueFactory><PropertyValueFactory property="fileSize"/></cellValueFactory>
          </TableColumn>
          <TableColumn text="ファイル名" sortable="false">
            <prefWidth><Double rpx="250"/></prefWidth>
            <cellValueFactory><PropertyValueFactory property="path"/></cellValueFactory>
          </TableColumn>
        </columns>
      </TableView>
    </VBox>
  </center>
  <bottom>
    <AnchorPane>
      <Button text="辞書の追加" onAction="#loadNewDictionary">
        <prefWidth><Double rpx="80"/></prefWidth>
        <minWidth><Double rpx="80"/></minWidth>
        <AnchorPane.bottomAnchor><Double rpx="10"/></AnchorPane.bottomAnchor>
        <AnchorPane.leftAnchor><Double rpx="10"/></AnchorPane.leftAnchor>
      </Button>
      <HBox>
        <spacing><Double rpx="5"/></spacing>
        <AnchorPane.bottomAnchor><Double rpx="10"/></AnchorPane.bottomAnchor>
        <AnchorPane.rightAnchor><Double rpx="10"/></AnchorPane.rightAnchor>
        <Button text="キャンセル" onAction="#cancelShow" cancelButton="true">
          <prefWidth><Double rpx="80"/></prefWidth>
          <minWidth><Double rpx="80"/></minWidth>
        </Button>
        <Button text="表示" onAction="#commitShow" defaultButton="true">
          <prefWidth><Double rpx="80"/></prefWidth>
          <minWidth><Double rpx="80"/></minWidth>
        </Button>
      </HBox>
    </AnchorPane>
  </bottom>
</BorderPane>

