<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>


<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <stylesheets>
    <URL value="@../css/main.css"/>
    <URL value="@../css/modification.css"/>
  </stylesheets>
  <center>
    <TabPane styleClass="setting-pane">
      <Tab text="表示" closable="false">
        <GridPane>
          <vgap><Double rpx="5"/></vgap>
          <hgap><Double rpx="5"/></hgap>
          <padding>
            <Insets>
              <top><Double rpx="10"/></top>
              <right><Double rpx="10"/></right>
              <bottom><Double rpx="10"/></bottom>
              <left><Double rpx="10"/></left>
            </Insets>
          </padding>
          <Label text="メインフォント:" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <Label text="編集フォント:" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
          <Label text="句読点調整:" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
          <HBox GridPane.columnIndex="1" GridPane.rowIndex="0">
            <spacing><Double rpx="5"/></spacing>
            <ComboBox fx:id="$contentFontNames" editable="true">
              <prefWidth><Double rpx="350"/></prefWidth>
              <minWidth><Double rpx="350"/></minWidth>
            </ComboBox>
            <Spinner fx:id="$contentFontSize" editable="true">
              <prefWidth><Double rpx="70"/></prefWidth>
              <minWidth><Double rpx="70"/></minWidth>
              <valueFactory><SpinnerValueFactory.IntegerSpinnerValueFactory min="8" max="60" initialValue="12" amountToStepBy="1"/></valueFactory>
            </Spinner>
          </HBox>
          <CheckBox fx:id="$usesSystemContentFont" text="システムフォントを用いる" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
          <HBox GridPane.columnIndex="1" GridPane.rowIndex="3">
            <spacing><Double rpx="5"/></spacing>
            <ComboBox fx:id="$editorFontNames" editable="true">
              <prefWidth><Double rpx="350"/></prefWidth>
              <minWidth><Double rpx="350"/></minWidth>
            </ComboBox>
            <Spinner fx:id="$editorFontSize" editable="true">
              <prefWidth><Double rpx="70"/></prefWidth>
              <minWidth><Double rpx="70"/></minWidth>
              <valueFactory><SpinnerValueFactory.IntegerSpinnerValueFactory min="8" max="60" initialValue="12" amountToStepBy="1"/></valueFactory>
            </Spinner>
          </HBox>
          <CheckBox fx:id="$usesSystemEditorFont" text="システムフォントを用いる" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
          <ToggleButton fx:id="$modifiesPunctuation" text="無効" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <prefWidth><Double rpx="70"/></prefWidth>
            <minWidth><Double rpx="70"/></minWidth>
          </ToggleButton>
          <TextFlow GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
              <Insets>
                <left><Double rpx="10"/></left>
                <bottom><Double rpx="5"/></bottom>
              </Insets>
            </GridPane.margin>
            <Text text="このフォントは単語データの表示に用いられます。&#10;フォントが太字に対応していれば、見出し語が太字で表示されます。"/>
          </TextFlow>
          <TextFlow GridPane.columnIndex="1" GridPane.rowIndex="5">
            <GridPane.margin>
              <Insets>
                <left><Double rpx="10"/></left>
                <bottom><Double rpx="5"/></bottom>
              </Insets>
            </GridPane.margin>
            <Text text="このフォントは単語データの編集時のテキストエリアで用いられます。"/>
          </TextFlow>
          <TextFlow GridPane.columnIndex="1" GridPane.rowIndex="7">
            <GridPane.margin>
              <Insets>
                <left><Double rpx="10"/></left>
              </Insets>
            </GridPane.margin>
            <Text text="句読点や括弧類の周りのスペースを調整します。&#10;フォントによってはこれを有効にすると読みやすくなる可能性があります。"/>
          </TextFlow>
        </GridPane>
      </Tab>
      <Tab text="登録辞書" closable="false">
        <GridPane fx:id="$registeredDictionaryPane">
          <vgap><Double rpx="5"/></vgap>
          <hgap><Double rpx="5"/></hgap>
          <padding>
            <Insets>
              <top><Double rpx="10"/></top>
              <right><Double rpx="10"/></right>
              <bottom><Double rpx="10"/></bottom>
              <left><Double rpx="10"/></left>
            </Insets>
          </padding>
        </GridPane>
      </Tab>
      <Tab text="その他" closable="false">
        <GridPane>
          <vgap><Double rpx="5"/></vgap>
          <hgap><Double rpx="5"/></hgap>
          <padding>
            <Insets>
              <top><Double rpx="10"/></top>
              <right><Double rpx="10"/></right>
              <bottom><Double rpx="10"/></bottom>
              <left><Double rpx="10"/></left>
            </Insets>
          </padding>
          <Label text="オートセーブ:" minWidth="-Infinity" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <ToggleButton fx:id="$savesAutomatically" text="無効" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <prefWidth><Double rpx="70"/></prefWidth>
            <minWidth><Double rpx="70"/></minWidth>
          </ToggleButton>
          <TextFlow GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
              <Insets>
                <left><Double rpx="10"/></left>
              </Insets>
            </GridPane.margin>
            <Text text="単語データの編集時に自動的に変更を保存します。&#10;無効にすると、メニューから保存を選ばない限り変更がファイルに反映されません。"/>
          </TextFlow>
        </GridPane>
      </Tab>
    </TabPane>
  </center>
  <bottom>
    <AnchorPane>
      <HBox>
        <spacing><Double rpx="5"/></spacing>
        <AnchorPane.bottomAnchor><Double rpx="10"/></AnchorPane.bottomAnchor>
        <AnchorPane.rightAnchor><Double rpx="10"/></AnchorPane.rightAnchor>
        <Button text="キャンセル" onAction="#cancelChange" cancelButton="true">
          <prefWidth><Double rpx="80"/></prefWidth>
          <minWidth><Double rpx="80"/></minWidth>
        </Button>
        <Button text="OK" onAction="#commitChange" defaultButton="true">
          <prefWidth><Double rpx="80"/></prefWidth>
          <minWidth><Double rpx="80"/></minWidth>
        </Button>
      </HBox>
    </AnchorPane>
  </bottom>
</BorderPane>

